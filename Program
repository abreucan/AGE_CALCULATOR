#import datetime so that we can automatically get the current year
import datetime
#get current year
today = str(datetime. date. today()) 
current_year = int(today[:4])

#ask the user to input birth year
birth_year = input('What year were you born?\n')

#use birth year to calculate age
age = abs(int(birth_year) - current_year)
print(f'You are {age} years old')
